{
    "name": "max/hexlet-php",
    "description": "Learning PHP on Hexlet",
    "type": "exercise-solutions",
    "require": {
        "nesbot/carbon": "^2.40",
        "tightenco/collect": "^8.0",
        "danielstjules/stringy": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "authors": [
        {
            "name": "Max Datsenko",
            "email": "datsenko.md@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "src/Basics/Challenges/AddDigits/AddDigits.php",
            "src/Basics/Challenges/FizzBuzz/FizzBuzz.php",
            "src/Basics/Challenges/BinarySum/BinarySum.php",
            "src/Basics/Challenges/Fib/Fib.php",
            "src/Basics/Challenges/IsBalanced/IsBalanced.php",
            "src/Basics/Challenges/IsHappy/IsHappy.php",
            "src/Basics/Challenges/IsPerfect/IsPerfect.php",
            "src/Basics/Challenges/IsPowerOfThree/IsPowerOfThree.php",
            "src/Arrays/Lessons/AddPrefix/AddPrefix.php",
            "src/Arrays/Lessons/BubbleSort/BubbleSort.php",
            "src/Arrays/Lessons/BuildDefinitionList/BuildDefinitionList.php",
            "src/Arrays/Lessons/BuildList/BuildList.php",
            "src/Arrays/Lessons/FieldCheck/FieldCheck.php",
            "src/Arrays/Lessons/CalculateAverage/CalculateAverage.php",
            "src/Arrays/Lessons/CalculateMax/CalculateMax.php"
        ]
    },
    "scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"phpunit": "phpunit",
		"test": "phpunit tests"
	}
}
